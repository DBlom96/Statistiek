\newcommand{\E}[1]{\mathbb{E}[#1]} % Verwachtingswaarde
\newcommand{\Var}[1]{\text{Var}(#1)} % Variantie
\newcommand{\Cov}[2]{\text{Cov}(#1, #2)} % Covariantie
\newcommand{\prob}[1]{\mathbb{P}(#1)} % Kans
\newcommand{\pdf}[1]{f_{#1}(x)} % Kansdichtheidsfunctie
\newcommand{\pmf}[1]{p_{#1}(k)} % Kansmassafunctie
